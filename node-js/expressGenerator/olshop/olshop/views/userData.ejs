<%- include ('_header') %> 

      <% for (let data of userData) { %>
        <div class="accordion accordion-flush" id="accordionFlushExample">
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target='#flush-collapse<%= data.id %>' aria-expanded="false" aria-controls="flush-collapse<%= data.id %>">
                <%= data.date %>
              </button>
            </h2>
            <div id="flush-collapse<%= data.id %>" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
              <div class="accordion-body">
                <table class="table table-hover">
                  <tr>
                    <th>Product</th>
                    <th>Jumlah</th>
                    <th>Harga/kg</th>
                    <th>Total Harga</th>
                  </tr>
                  <% data.items.forEach((item) => { %>
                    <tr>
                      <td><%= item.product %></td>
                      <td><%= item.sum %></td>
                      <td><%= item.harga %></td>
                      <td><%= item.total %></td>
                    </tr>
                  <% }) %>
                  <tr>
                    <td colspan="4">total transaksi : <%= data.total %> </td>
                  </tr>
                </table>
              </div>
            </div>
          </div>
        </div>
      <% } %>
      