<%- include ('_header') %> 
<%- include ('_message') %>

  <div style="display: flex; flex-direction: row">
  <div
  style="
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
    flex-wrap: wrap;
    justify-content: space-around;
  "
>

  <% for ( let item of ItemsArray){%>

  <div class="card" style="width: 22rem; margin: 0.5rem;">
    <img src="<%=item.image%>" class="card-img-top" alt="<%=item.name%>" style="height: 200px; width: auto" >
    <div class="card-body">
      <h4 class="card-title"><%=item.name%></h4>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Qty: <%=item.total%> kg</li>
        <li class="list-group-item"><b>harga Rp.<%=item.price%>/kg</b></li>
      </ul>
      <div class="description" style="overflow: auto; height: 100px">
        <p class="card-text"> <%=item.desc%></p>
      </div><br>
        <a href="/items/Add/<%=item.id%>" class="btn btn-success">
          <i class="shopping basket icon"></i> Add to Cart
      </a>
    </div>
  </div>
  <%}%>
  </div>
  </div>
 
<!-- saat diklik CheckOut langsung ke redirect ke halaman lain dan proses buying disana -->
